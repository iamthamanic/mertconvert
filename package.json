{
  "name": "mertconvert",
  "version": "2.0.0",
  "main": "dist/main.js",
  "bin": {
    "mertconvert": "./dist/main.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/main.ts",
    "start": "node dist/main.js",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "prepare": "husky install",
    "prepublishOnly": "npm run lint && npm run test && npm run build",
    "prepack": "npm run build"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [
    "webp",
    "webm",
    "converter",
    "media",
    "cli",
    "image",
    "video"
  ],
  "author": "iamthamanic",
  "license": "ISC",
  "description": "Easy-to-use CLI tool for converting images to WebP and videos to WebM",
  "repository": {
    "type": "git",
    "url": "https://github.com/iamthamanic/mertconvert.git"
  },
  "bugs": {
    "url": "https://github.com/iamthamanic/mertconvert/issues"
  },
  "homepage": "https://github.com/iamthamanic/mertconvert#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@types/cli-progress": "^3.11.6",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.1.0",
    "@types/prompts": "^2.4.9",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "tsx": "^4.20.3",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "cli-progress": "^3.12.0",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "prompts": "^2.4.2",
    "sharp": "^0.34.3"
  }
}
